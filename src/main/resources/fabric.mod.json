{
  "schemaVersion": 1,
  "id": "cushypillows",
  "version": "${version}",
  "name": "Cushy Pillows",
  "description": "Adds customizable, interactive pillows that you can sleep with, decorate, and throw at others!",
  "authors": ["Daniel", "SirJain"],
  "contact": {
    "sources": "https://github.com/GitWither/cushypillows",
    "issues": "https://github.com/GitWither/cushypillows/issues",
    "discord": "https://discord.gg/wM4CKTbFVN"
  },
  "license": "All-Rights-Reserved",
  "icon": "assets/cushypillows/icon.png",
  "environment": "*",
  "entrypoints": {
    "fabric-datagen": [
      "daniel.cushypillows.data.CushyPillowsDataGenerator"
    ],
    "client": [
      "daniel.cushypillows.client.CushyPillowsClient"
    ],
    "main": [
      "daniel.cushypillows.CushyPillows"
    ]
  },
  "mixins": [
    "cushypillows.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
